{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2022",
    "allowJs": true,
    "checkJs": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"],
      "@root": ["."],
      "@middleware/*": ["src/middleware/*"],
      "@shared/*": ["src/shared/*"],
      "@config/*": ["src/config/*"],
      "@src/*": ["src/*"]
    }
  },
  "exclude": ["node_modules", "**/node_modules/*"]
}
